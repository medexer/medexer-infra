{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@app/admin-service": [
        "libs/admin-service/src"
      ],
      "@app/auth-service": [
        "libs/auth-service/src"
      ],
      "@app/common": [
        "libs/common/src"
      ],
      "@app/donation-center-service": [
        "libs/donation-center-service/src"
      ],
      "@app/donor-service": [
        "libs/donor-service/src"
      ],
      "@app/account-service": [
        "libs/account-service/src"
      ],
      "@app/helper-service": [
        "libs/helper-service/src"
      ],
      "@app/notification-service": [
        "libs/notification-service/src"
      ],
    }
  }
}
